    "tags": [
        {
            "name": "gpi_auth",
            "description": "Манипуляции с таблицей администраторов (gpi_admins)"
        },
        {
            "name": "gpi_products",
            "description": "Манипуляции с таблицей продуктов (gpi_products)"
        }
    ],
    "schemes": [
        "http"
    ],
    "paths": {
        "/gpi_auth": {
            "post": {
                "tags": [
                    "gpi_auth"
                ],
                "summary": "Проверка авторизации администратора",
                "description": "Передав параметры gpi_login и gpi_password происходит проверка авторизации",
                "parameters": [
                    {
                        "in": "body",
                        "name": "body",
                        "description": "Логин, пароль в теле POST",
                        "required": true,
                        "schema": {
                            "$ref": "#/definitions/ApiRequest__gpi_auth"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Вариант 1) Логин существует и пароль верен - успешная авторизация пользователя \n Вариант 2) Логин не существует или пароль не совпадает - ошибка авторизации",
                        "schema": {
                            "type": "object",
                            "$ref": "#/definitions/ApiResponse__server_msg"
                        }
                    }
                }
            }
        },
        "/gpi_get_products": {
            "get": {
                "tags": [
                    "gpi_products"
                ],
                "summary": "Получаем массив продуктов",
                "description": "Вариант 1) Получаем массив объектов продуктов \n Вариант 2) При указании параметра gpi_invert = true, получаем массив объектов продуктов отсортированных по полю gpi_id в обратном порядке \n Вариант 3) При указании параметра gpi_id, получаем массив одного объекта продукта по ид.",
                "parameters": [
                    {
                        "name": "gpi_invert",
                        "description": "Получить ответ отсортированным по полю gpi_id в обратном порядке",
                        "required": false,
                        "type": "string"
                    },
                    {
                        "name": "gpi_id",
                        "description": "Ид продукта, который хотим получить",
                        "required": false,
                        "type": "string"
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Вариант 1) Получили массив объектов продуктов \n Вариант 2) Получили массив объектов продуктов отсортированных по ид в обратном порядке \n Вариант 3) Получили массив c одним объектом продукта по ид",
                        "schema": {
                            "type": "array",
                            "items": {
                                "$ref": "#/definitions/ApiResponse__gpi_get_products"
                            }
                        }
                    }
                },
                "externalDocs": {
                    "description": "Пример ответа с массивом объектов продуктов (gpi_products.json)",
                    "url": "https://raw.githubusercontent.com/Pavel-Innokentevich-Galanin/gpi_4coursework/main/gpi_ds/public/gpi_products.json"
                }
            }
        },
        "/gpi_add_products": {
            "post": {
                "tags": [
                    "gpi_products"
                ],
                "summary": "Добавляем массив объектов продуктов (массив с объектом продукта)",
                "description": "Вариант 1) Добавляем массив объекта продукта в базу данных не указав данные \n Вариант 2) Добавляем массив объектов продуктов (добавляем массив объекта продукта) передав данные через тело POST",
                "parameters": [
                    {
                        "in": "body",
                        "name": "1) body",
                        "description": "Массив c объектами продуктов (с объектом продукта) не передается в теле POST",
                        "required": true,
                        "schema": {
                            "$ref": "#/definitions/ApiRequest__gpi_add_products__without_products_array"
                        }
                    },
                    {
                        "in": "body",
                        "name": "2) body",
                        "description": "Массив c объектами продуктов (с объектом продукта) передается в теле POST",
                        "required": true,
                        "schema": {
                            "$ref": "#/definitions/ApiRequest__gpi_add_products"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Успешное добавление массива с объектами продуктов (массива с объектом продукта)",
                        "schema": {
                            "type": "object",
                            "$ref": "#/definitions/ApiResponse__server_msg"
                        }
                    }
                }
            }
        },
        "/gpi_deleted_table_products": {
            "post": {
                "tags": [
                    "gpi_products"
                ],
                "summary": "Очищаем таблицу продуктов",
                "description": "Очищаем таблицу продуктов, чтобы при добавлении продукта индекс не продолжался инкрементироваться с какого-нибудь 1234, а началось все по новой с 1",
                "parameters": [
                    {
                        "in": "body",
                        "name": "body",
                        "description": "Логин, пароль в теле POST",
                        "required": true,
                        "schema": {
                            "$ref": "#/definitions/ApiRequest__gpi_delete_table_products"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Успешное очищение таблицы",
                        "schema": {
                            "type": "object",
                            "$ref": "#/definitions/ApiResponse__server_msg"
                        }
                    }
                }
            }
        },
        "/gpi_delete_product": {
            "post": {
                "tags": [
                    "gpi_products"
                ],
                "summary": "Удаляем продукт по ид",
                "description": "Удаляем продукт по ид указанным в параметре gpi_id",
                "parameters": [
                    {
                        "in": "body",
                        "name": "body",
                        "description": "Логин, пароль, ид в теле POST",
                        "required": true,
                        "schema": {
                            "$ref": "#/definitions/ApiRequest__gpi_update_product"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Успешное удаление продукта из базы данных",
                        "schema": {
                            "type": "object",
                            "$ref": "#/definitions/ApiResponse__server_msg"
                        }
                    }
                }
            }
        },
        "/gpi_update_product": {
            "post": {
                "tags": [
                    "gpi_products"
                ],
                "summary": "Обновляем продукт по ид",
                "description": "Обновляем продукт по ид указанным в параметре gpi_id, данными указанными в параметре gpi_data",
                "parameters": [
                    {
                        "in": "body",
                        "name": "body",
                        "description": "Логин, пароль, объект продукта, ид в теле POST",
                        "required": true,
                        "schema": {
                            "$ref": "#/definitions/ApiRequest__gpi_update_product"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Успешное удаление продукта из базы данных",
                        "schema": {
                            "type": "object",
                            "$ref": "#/definitions/ApiResponse__server_msg"
                        }
                    }
                }
            }
        }
    },
